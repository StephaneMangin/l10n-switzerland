<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_account_bank_statement_specific_form" model="ir.ui.view">
        <field name="name">account.bank.statement.specific.form</field>
        <field name="model">account.bank.statement</field>
        <field name="inherit_id" ref="account.view_bank_statement_form"/>
        <field name="arch" type="xml">

            <notebook position="inside">
                <page string="Task">
                    <group attrs="{'invisible': [('id', '=', False)]}">
                        <field name="id" invisible="True"/>
                        <field name="project_id" invisible="True"/>
                        <field name="task_id"
                               context="{'default_project_id': project_id, 'default_type': 'bank_statement', 'default_bank_statement_id': active_id}"/>
                        <field name="task_attachment_ids" mode="kanban">
                            <!-- Copy of mail.view_document_file_kanban but remove class="oe_kanban_global_click" -->
                            <kanban>
                                <field name="id"/>
                                <field name="mimetype"/>
                                <field name="type"/>
                                <field name="datas_fname"/>
                                <field name="name"/>
                                <templates>
                                    <t t-name="kanban-box">
                                        <div> <!-- <div class="oe_kanban_global_click"> -->
                                            <div class="oe_kanban_vignette">
                                                <div class="oe_attachment">
                                                    <div class="oe_name">
                                                        <field name="name"/>
                                                    </div>
                                                    <div t-if="record.type.raw_value == 'binary'">
                                                        <a t-attf-href="/web/content/#{record.id.value}?download=1">
                                                            <t t-set="webimage" t-value="new RegExp('image.*(gif|jpeg|jpg|png)').test(record.mimetype.value)"/>
                                                            <div t-if="!webimage" class="o_image" t-att-data-mimetype="record.mimetype.value"/>
                                                            <div t-if="webimage" class="o_kanban_attachment_image">
                                                                <img t-attf-src="/web/image/#{record.id.value}?download=1"/>
                                                            </div>
                                                        </a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </t>
                                </templates>
                            </kanban>
                            <!-- END Copy of mail.view_document_file_kanban but remove class="oe_kanban_global_click" -->
                        </field>
                    </group>
                </page>
            </notebook>

        </field>
    </record>

</odoo>
