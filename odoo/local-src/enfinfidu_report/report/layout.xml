<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- Change the header format -->
    <template id="external_layout_header" inherit_id="report.external_layout_header">
      <xpath expr="//div[@class='header']" position="replace">
        <div class="header">
          <div class="row">
            <div class="col-xs-12 text-center" style="height: 120px;">
              <img t-if="company.report_logo" t-att-src="'data:image/png;base64,%s' % company.report_logo" style="max-height: 100px; margin-bottom: 20px;"/>
            </div>
          </div>
          <div class="row zero_min_height">
            <div class="col-xs-12">
              <div style="border-bottom: 0px solid black;"/>
            </div>
          </div>
          <div class="row" style="margin_top: 20px;">
            <div class="col-xs-6" name="company_address">

              <span t-field="company.partner_id" t-field-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;name&quot;], &quot;no_marker&quot;: true}" style="border-bottom: 0px solid black; display:inline-block;"/>
            </div>
          </div>
        </div>
      </xpath>
    </template>

    <template id="external_layout_footer" inherit_id="report.external_layout_footer">
      <xpath expr="//ul[@name='financial_infos']" position="replace"/>
      <xpath expr="//ul[@class='list-inline']" position="after">
        <ul t-if="not company.custom_footer" class="list-inline" name="financial_info">
          <li t-if="company.report_partner_bank_id">VAT no.:<span t-field="company.vat"/></li>
          <li t-if="company.report_partner_bank_id">Account holder: <span t-field="company.name"/></li>
          <li t-if="company.report_partner_bank_id">Bank: <span t-field="company.report_partner_bank_id.bank_id.name"/></li>
          <li t-if="company.report_partner_bank_id">IBAN: <span t-field="company.report_partner_bank_id.acc_number"/></li>
          <li t-if="company.report_partner_bank_id">BIC: <span t-field="company.report_partner_bank_id.bank_id.bic"/></li>
        </ul>
      </xpath>
    </template>

    <!-- Change the default format for European A4 -->
    <record id="report.paperformat_euro" model="report.paperformat">
        <field name="name">European A4</field>
        <field name="default" eval="True" />
        <field name="format">A4</field>
        <field name="page_height">0</field>
        <field name="page_width">0</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">50</field>
        <field name="margin_bottom">30</field>
        <field name="margin_left">10</field>
        <field name="margin_right">10</field>
        <field name="header_line" eval="False" />
        <field name="header_spacing">45</field>
        <field name="dpi">90</field>
    </record>

</odoo>
