<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="hr_contract_specific_form" model="ir.ui.view">
        <field name="name">hr.contract.specific.form</field>
        <field name="model">hr.contract</field>
        <field name="inherit_id" ref="hr_contract.hr_contract_view_form"/>
        <field name="arch" type="xml">

            <field name="working_hours" position="before">
                <field name="employee_company_id" invisible="True"/>
            </field>

            <field name="working_hours" position="attributes">
                <attribute name="domain">[('company_id', '=', employee_company_id)]</attribute>
                <attribute name="context">{'default_company_id': employee_company_id}</attribute>
            </field>

        </field>
    </record>

</odoo>
