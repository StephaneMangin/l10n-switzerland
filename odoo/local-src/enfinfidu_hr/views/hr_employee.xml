<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="hr_employee_specific_form" model="ir.ui.view">
        <field name="name">hr.employee.specific.form</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">

            <field name="calendar_id" position="attributes">
                <attribute name="domain">[('company_id', '=', company_id)]</attribute>
                <attribute name="context">{'default_company_id': company_id}</attribute>
            </field>

        </field>
    </record>

</odoo>
