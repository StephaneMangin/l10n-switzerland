<?xml version="1.0" encoding="UTF-8"?>
<odoo>

	<record id="view_hr_salary_rule_specific_form" model="ir.ui.view">
		<field name="name">hr.salary.rule.specific.form</field>
		<field name="model">hr.salary.rule</field>
		<field name="inherit_id" ref="hr_payroll.hr_salary_rule_form"/>
		<field name="arch" type="xml">
			<field name="amount_python_compute" position="after">
				<field name="rate_python_compute" widget="ace" attrs="{'invisible':[('amount_select','!=','code')], 'required':[('amount_select','=','code')]}"/>
			</field>
			<field name="amount_python_compute" position="attributes">
				<attribute name="widget">ace</attribute>
			</field>
		</field>
	</record>

</odoo>
