        <field name="model">hr.payroll.config</field>
        <field name="inherit_id" ref="l10n_ch_hr_payroll.view_hr_payroll_config_form"/>
        <field name="arch" type="xml">

            <field name="laa_per" position="after">
                <field name="laanp_per"/>
            </field>

            <xpath expr="//field[@name='lca_per']/parent::group" position="attributes">
                <attribute name="string">IJM</attribute>
            </xpath>

        </field>
    </record>

</odoo>
