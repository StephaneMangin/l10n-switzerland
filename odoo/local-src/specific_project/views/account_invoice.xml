<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_account_invoice_specific_form" model="ir.ui.view">
        <field name="name">account.invoice.specific.form</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.invoice_supplier_form"/>
        <field name="arch" type="xml">

            <xpath expr="//notebook/page[2]//field[@name='company_id']" position="after">
                <field name="project_id"/>
            </xpath>

            <notebook position="inside">
                <page string="Tasks">
                    <field name="task_ids" context="{'default_project_id': project_id, 'default_type': 'supplier_invoice', 'default_supplier_invoice_id': active_id}"/>
                </page>
            </notebook>

        </field>
    </record>

</odoo>
