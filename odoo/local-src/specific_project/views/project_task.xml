<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_project_task_specific_form" model="ir.ui.view">
        <field name="name">project.task.specific.form</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form2"/>
        <field name="arch" type="xml">

            <field name="user_id" position="after">
                <field name="type"/>
                <field name="supplier_invoice_id"
                       context="{'default_type': 'in_invoice', 'default_company_id': company_id, 'type': 'in_invoice', 'journal_type': 'purchase'}"
                       attrs="{'invisible':[('type', '!=', 'supplier_invoice')]}"/>
                <field name="expense_id"
                       attrs="{'invisible':[('type', '!=', 'expense')]}"/>
                <field name="bank_statement_id"
                       attrs="{'invisible':[('type', '!=', 'bank_statement')]}"/>
            </field>

        </field>
    </record>

</odoo>
