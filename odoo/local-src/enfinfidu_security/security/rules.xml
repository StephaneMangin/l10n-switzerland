<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_holidays_per_company" model="ir.rule">
        <field name="name">Leaves per Company</field>
        <field name="model_id" ref="hr_holidays.model_hr_holidays"/>
        <field name="domain_force">[('employee_id.company_id','=',user.company_id.id)]</field>
        <field name="perm_read" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_unlink" eval="True"/>
    </record>

    <record id="hr_attendance_per_company" model="ir.rule">
        <field name="name">Attendance per Company</field>
        <field name="model_id" ref="hr_attendance.model_hr_attendance"/>
        <field name="domain_force">[('employee_id.company_id','=',user.company_id.id)]</field>
        <field name="perm_read" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_unlink" eval="True"/>
    </record>
</odoo>
