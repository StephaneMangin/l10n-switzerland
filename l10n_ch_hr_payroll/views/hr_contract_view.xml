<odoo>
    <data>
        <record model="ir.ui.view" id="hr_contract_form_l10n_ch_inherit">
            <field name="name">hr.contract.form.inherit_ch_01</field>
            <field name="model">hr.contract</field>
            <field name="inherit_id" ref="hr_contract.hr_contract_view_form"/>
            <field name="priority" eval="20"/>
            <field name="arch" type="xml">
                <field name="struct_id" position="after">
                    <field name="imp_src"/>
                    <group string="OBP">
                        <field name="lpp_contract_id" options="{'no_create': True, 'no_open': True}"/>
                        <field name="lpp_rate"/>
                        <field name="lpp_amount"/>
                    </group>
                </field>
            </field>
        </record>
        <record model="ir.ui.view" id="hr_contract_form_l10n_ch_inherit2">
            <field name="name">hr.contract.form.inherit_ch_02</field>
            <field name="model">hr.contract</field>
            <field name="inherit_id" ref="hr_contract.hr_contract_view_form"/>
            <field name="priority" eval="20"/>
            <field name="arch" type="xml">
                <field name="wage" position="before">
                    <field name="wage_fulltime"/>
                    <field name="occupation_rate"/>
                </field>
            </field>
        </record>
    </data>
</odoo>
